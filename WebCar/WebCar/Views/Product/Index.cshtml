@model List<WebCar.Models.CAR>

@{
    ViewBag.Title = "Danh sách xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-page">
    <div class="container py-5">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h2 class="fw-bold mb-2">
                    <i class="fas fa-car text-primary me-2"></i>
                    Danh sách xe VinFast
                </h2>
                <p class="text-muted">
                    Tìm thấy <strong>@(ViewBag.TotalCars ?? Model.Count)</strong> xe phù hợp
                </p>
            </div>
            <div class="col-md-4 text-end">
                @if (User.Identity.IsAuthenticated &&
                    (Session["RoleName"]?.ToString() == "ADMIN" || Session["RoleName"]?.ToString() == "MANAGER"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                        <i class="fas fa-plus-circle me-2"></i>Thêm xe mới
                    </a>
                }
            </div>
        </div>

        <!-- Search & Filter -->
        <div class="card modern-card mb-4">
            <div class="card-body">
                @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "row g-3" }))
                {
                    <!-- Search -->
                    <div class="col-md-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-search text-primary"></i> Tìm kiếm
                        </label>
                        <input type="text" name="search" class="form-control" placeholder="Tên xe..." value="@ViewBag.SearchTerm" />
                    </div>

                    <!-- Brand -->
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-tag text-success"></i> Hãng xe
                        </label>
                        <select name="brand" class="form-select">
                            <option value="">Tất cả</option>
                            @if (ViewBag.Brands != null)
                            {
                                foreach (var brand in ViewBag.Brands)
                                {
                                    <option value="@brand" @(brand == ViewBag.BrandFilter ? "selected" : "")>@brand</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Price Range -->
                    <div class="col-md-2">
                        <label class="form-label fw-bold">
                            <i class="fas fa-dollar-sign text-warning"></i> Giá từ (triệu)
                        </label>
                        <input type="number" name="minPrice" class="form-control" placeholder="0" value="@ViewBag.MinPrice" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label fw-bold">
                            <i class="fas fa-dollar-sign text-warning"></i> Đến (triệu)
                        </label>
                        <input type="number" name="maxPrice" class="form-control" placeholder="9999" value="@ViewBag.MaxPrice" />
                    </div>

                    <!-- Submit -->
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter"></i>
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Products Grid -->
        @if (Model != null && Model.Any())
        {
            <div class="row g-4 mb-4">
                @foreach (var car in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product-card">
                            <!-- Image -->
                            <div class="product-image">
                                <img src="@Url.Content("~/" + car.HINHANH)"
                                     alt="@car.TENXE"
                                     onerror="this.src='@Url.Content("~/images/cars/default.jpg")'" />

                                <!-- Status Badge -->
                                @if (car.TRANGTHAI == "Còn hàng")
                                {
                                    <span class="status-badge badge-success">
                                        <i class="fas fa-check-circle"></i> Còn hàng
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge badge-danger">
                                        <i class="fas fa-times-circle"></i> Hết hàng
                                    </span>
                                }

                                <!-- Quick Actions -->
                                <div class="product-actions">
                                    <a href="@Url.Action("Details", new { id = car.MAXE })"
                                       class="btn btn-sm btn-light"
                                       title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (User.Identity.IsAuthenticated && car.TRANGTHAI == "Còn hàng")
                                    {
                                        <a href="@Url.Action("Create", "Order", new { carId = car.MAXE })"
                                           class="btn btn-sm btn-success"
                                           title="Đặt cọc ngay">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                    }
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="product-content">
                                <!-- Brand -->
                                <span class="product-brand">@car.HANGXE</span>

                                <!-- Name -->
                                <h5 class="product-title">
                                    <a href="@Url.Action("Details", new { id = car.MAXE })">@car.TENXE</a>
                                </h5>

                                <!-- Description -->
                                @if (!string.IsNullOrEmpty(car.MOTA))
                                {
                                    <p class="product-description">
                                        @(car.MOTA.Length > 80 ? car.MOTA.Substring(0, 80) + "..." : car.MOTA)
                                    </p>
                                }

                                <!-- Info -->
                                <div class="product-info">
                                    <span class="info-item">
                                        <i class="fas fa-calendar-alt"></i> @car.NAMSX
                                    </span>
                                </div>

                                <!-- Price & Action -->
                                <div class="product-footer">
                                    <div class="product-price">
                                        @if (car.GIA.HasValue)
                                        {
                                            <span class="price">@string.Format("{0:N0}", car.GIA) đ</span>
                                        }
                                        else
                                        {
                                            <span class="price">Liên hệ</span>
                                        }
                                    </div>

                                    <!-- Button logic -->
                                    @if (User.Identity.IsAuthenticated && car.TRANGTHAI == "Còn hàng")
                                    {
                                        <a href="@Url.Action("Create", "Order", new { carId = car.MAXE })"
                                           class="btn btn-success btn-sm">
                                            Đặt cọc <i class="fas fa-hand-holding-usd ms-1"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Details", new { id = car.MAXE })"
                                           class="btn btn-primary btn-sm">
                                            Chi tiết <i class="fas fa-arrow-right ms-1"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new {
                                search = ViewBag.SearchTerm,
                                brand = ViewBag.BrandFilter,
                                minPrice = ViewBag.MinPrice,
                                maxPrice = ViewBag.MaxPrice,
                                page = ViewBag.CurrentPage - 1
                            })">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new {
                                    search = ViewBag.SearchTerm,
                                    brand = ViewBag.BrandFilter,
                                    minPrice = ViewBag.MinPrice,
                                    maxPrice = ViewBag.MaxPrice,
                                    page = i
                                })">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new {
                                search = ViewBag.SearchTerm,
                                brand = ViewBag.BrandFilter,
                                minPrice = ViewBag.MinPrice,
                                maxPrice = ViewBag.MaxPrice,
                                page = ViewBag.CurrentPage + 1
                            })">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-car fa-5x text-muted mb-3 d-block"></i>
                <h4 class="text-muted">Không tìm thấy xe nào</h4>
                <p class="text-muted">Thử thay đổi bộ lọc hoặc tìm kiếm với từ khóa khác</p>
                <a href="@Url.Action("Index")" class="btn btn-primary mt-3">
                    <i class="fas fa-redo me-2"></i>Xem tất cả
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .product-page {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .modern-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            background: white;
        }

        /* Product Card */
        .product-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

        .product-image {
            position: relative;
            height: 220px;
            overflow: hidden;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-card:hover .product-image img {
            transform: scale(1.15) rotate(2deg);
        }

        .status-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 6px 14px;
            border-radius: 25px;
            font-size: 0.75rem;
            font-weight: 600;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            backdrop-filter: blur(10px);
        }

        .badge-success {
            background: rgba(40, 167, 69, 0.95);
            color: white;
        }

        .badge-danger {
            background: rgba(220, 53, 69, 0.95);
            color: white;
        }

        .product-actions {
            position: absolute;
            top: 15px;
            right: 15px;
            display: flex;
            gap: 8px;
            opacity: 0;
            transform: translateX(10px);
            transition: all 0.3s ease;
        }

        .product-card:hover .product-actions {
            opacity: 1;
            transform: translateX(0);
        }

        .product-actions .btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .product-content {
            padding: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .product-brand {
            color: #667eea;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            font-weight: 700;
        }

        .product-title {
            margin: 10px 0 15px;
            font-size: 1.15rem;
            font-weight: 700;
            line-height: 1.4;
        }

        .product-title a {
            color: #212529;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .product-title a:hover {
            color: #667eea;
        }

        .product-description {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 15px;
            flex: 1;
            line-height: 1.6;
        }

        .product-info {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
            padding-top: 15px;
            border-top: 1px solid #e9ecef;
        }

        .info-item {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: 500;
        }

        .info-item i {
            margin-right: 5px;
            color: #667eea;
        }

        .product-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
        }

        .product-price .price {
            font-size: 1.35rem;
            font-weight: 800;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip:text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .product-footer .btn {
            border-radius: 25px;
            padding: 8px 18px;
            font-weight: 600;
            font-size: 0.85rem;
            transition: all 0.3s ease;
        }

        .product-footer .btn-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
        }

        .product-footer .btn-success:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }

        .product-footer .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

        .product-footer .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        /* Pagination */
        .pagination {
            margin-top: 40px;
        }

        .page-link {
            border-radius: 10px;
            margin: 0 5px;
            padding: 10px 18px;
            border: 2px solid #e9ecef;
            color: #667eea;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .page-link:hover {
            background: #f8f9fa;
            border-color: #667eea;
            transform: translateY(-2px);
        }

        .page-item.active .page-link {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-color: #667eea;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .page-item.disabled .page-link {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Filter Card Enhancement */
        .modern-card .form-label {
            font-size: 0.9rem;
            margin-bottom: 8px;
        }

        .modern-card .form-control,
        .modern-card .form-select {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 10px 15px;
            transition: all 0.3s ease;
        }

        .modern-card .form-control:focus,
        .modern-card .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .modern-card .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 10px;
            transition: all 0.3s ease;
        }

        .modern-card .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        /* Empty State */
        .text-center.py-5 {
            background: white;
            border-radius: 15px;
            padding: 60px 20px !important;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

        .text-center.py-5 .fas.fa-car {
            opacity: 0.3;
        }

      
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('Product Index loaded');
            console.log('Total cars: @(ViewBag.TotalCars ?? Model.Count)');

            // Smooth scroll to top when pagination is clicked
            $('.pagination a').on('click', function() {
                $('html, body').animate({
                    scrollTop: 0
                }, 600);
            });

            // Add loading animation to buttons
            $('.btn').on('click', function() {
                if (!$(this).hasClass('page-link')) {
                    $(this).html('<i class="fas fa-spinner fa-spin"></i>');
                }
            });
        });
    </script>
}